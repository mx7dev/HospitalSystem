<!-- Modal Doctor Edit -->
<div class="modal fade" id="largeModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="largeModalLabel"></h4>
            </div>
            <div class="modal-body" style="padding-bottom: 0px !important">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="card">
                        <div class="body" style="padding-bottom: 0px !important">
                            <div id="sectionCreate">
                                <div class="row clearfix">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <select class="form-control selectpicker" onchange="objAppointment.ListHours()" id="selectPatients" title="Seleccionar Paciente" data-live-search="true">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <select class="selectpicker" id="selectHours" title="Seleccionar Horas" multiple>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="sectionView">
                                <div class="row clearfix">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label id="labelName"></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <ul class="list-group" id="listHoursView">
                                                @*<li class="list-group-item">Cras justo odio</li>
                                                <li class="list-group-item">Dapibus ac facilisis in</li>
                                                <li class="list-group-item">Morbi leo risus</li>
                                                <li class="list-group-item">Porta ac consectetur ac</li>
                                                <li class="list-group-item">Vestibulum at eros</li>*@
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <textarea rows="4" class="form-control no-resize" id="commnet" placeholder="Comentario..."></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer" style="padding-top: 0px !important">
                <button type="button" id="btnSaveAppointment" class="btn btn-raised btn-primary waves-effect">Guardar</button>
                <button type="button" id="btnDeleteAppointment" class="btn btn-raised btn-primary waves-effect">Eliminar</button>
                <button type="button" class="btn btn-raised btn-primary waves-effect" data-dismiss="modal">Salir</button>
            </div>
        </div>
    </div>
</div>

